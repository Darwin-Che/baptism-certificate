                phx-value-id={@selected_profile.id}
                class="btn btn-primary btn-outline"
              >
                <.icon name="hero-arrow-path" class="w-5 h-5 mr-2" /> Re-Generate
              </button>
              <button
                phx-click="unmark_reviewed"
                phx-value-id={@selected_profile.id}
                class="btn btn-warning"
              >
                <.icon name="hero-arrow-uturn-left" class="w-5 h-5 mr-2" /> Unmark Reviewed
              </button>
