                />
              </div>
              <div>
                <label class="label py-1">
                  <span class="label-text text-xs font-semibold">name</span>
                </label>
                <input
                  type="text"
                  name="name"
                  value={Map.get(@certificate_config, "name", "left=1 top=1 w=6 h=1.5 fontsz=18")}
                  placeholder="left=1 top=1 w=6 h=1.5 fontsz=18"
                  class="input input-bordered input-sm w-full"
                />
              </div>
              <div>
                <label class="label py-1">
                  <span class="label-text text-xs font-semibold">birthday</span>
                </label>
                <input
                  type="text"
                  name="birthday"
                  value={Map.get(@certificate_config, "birthday", "left=1 top=2.5 w=6 h=1.5 fontsz=18 font=\"Times New Roman\"")}
                  placeholder="left=1 top=2.5 w=6 h=1.5 fontsz=18"
                  class="input input-bordered input-sm w-full"
                />
              </div>
              <div>
                <label class="label py-1">
                  <span class="label-text text-xs font-semibold">baptism_day</span>
                </label>
                <input
                  type="text"
                  name="baptism_day"
                  value={Map.get(@certificate_config, "baptism_day", "left=1 top=4 w=6 h=1.5 fontsz=18 font=\"Times New Roman\"")}
                  placeholder="left=1 top=4 w=6 h=1.5 fontsz=18"
                  class="input input-bordered input-sm w-full"
                />
              </div>
              <div>
                <label class="label py-1">
                  <span class="label-text text-xs font-semibold">baptism_month</span>
                </label>
                <input
                  type="text"
                  name="baptism_month"
                  value={Map.get(@certificate_config, "baptism_month", "left=2 top=4 w=6 h=1.5 fontsz=18 font=\"Times New Roman\"")}
