                class="btn btn-accent btn-outline"
              >
                <.icon name="hero-arrow-path" class="w-5 h-5 mr-2" /> Re-Extract
              </button>
              <button
                phx-click="generate_certificate"
                phx-value-id={@selected_profile.id}
                class="btn btn-primary btn-outline"
              >
                <.icon name="hero-arrow-path" class="w-5 h-5 mr-2" /> Re-Generate
              </button>
              <button
                phx-click="mark_reviewed"
                phx-value-id={@selected_profile.id}
                class="btn btn-success"
              >
                <.icon name="hero-check-circle" class="w-5 h-5 mr-2" /> Mark as Reviewed
              </button>

